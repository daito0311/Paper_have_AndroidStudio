<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="20dp"
        android:text="Reportar"
        android:textColor="#303F9F"
        android:textSize="18pt"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:text="Desk #1"
        android:textColor="#333333"
        android:textSize="10pt"
        android:textStyle="bold"
        android:id="@+id/report_occupied_seat_seat_name_tv"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20px"
        android:text="Reportar comportamiento inapropiado"
        android:textColor="#E05151"
        android:textStyle="bold"
        android:textSize="10pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/report_occupied_seat_loud_cb"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20px"
            android:text="Mucho ruido"
            android:textColor="#444"
            android:textStyle="bold"
            android:textSize="10pt"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/report_occupied_seat_damage_cb"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20px"
            android:text="Dañó la mesa"
            android:textColor="#444"
            android:textStyle="bold"
            android:textSize="10pt"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/report_occupied_seat_bad_use_cb"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20px"
            android:text="Uso inadecuado"
            android:textColor="#444"
            android:textStyle="bold"
            android:textSize="10pt"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20px"
        android:hint="Otra"
        android:id="@+id/report_occupied_seat_other_et"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="#E05151"
        android:text="REPORTAR"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/report_occupied_seat_report_btn"/>

</LinearLayout>