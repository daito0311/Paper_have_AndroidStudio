<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        android:text="Desk #01"
        android:textColor="#303F9F"
        android:textSize="18pt"
        android:textStyle="bold"
        android:id="@+id/available_seat_name_tv"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:text="Disponible"
        android:textColor="#43BF6D"
        android:textSize="10pt"
        android:textStyle="bold"
        android:id="@+id/available_seat_state_tv"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10px"
            android:text="Inicia:"
            android:textColor="#303F9F"
            android:textSize="10pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10px"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#303F9F"
            android:textSize="10pt"
            android:id="@+id/available_seat_start_time_tv"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10px"
            android:text="Termina:"
            android:textColor="#303F9F"
            android:textSize="10pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10px"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#303F9F"
            android:textSize="10pt"
            android:id="@+id/available_seat_finish_time_tv"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="40px"
        android:text="Historial de reportes:"
        android:textColor="#212121"
        android:textStyle="bold"
        android:textSize="10pt"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:background="#303F9F"
        android:text="RESERVAR"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/available_seat_reserve_btn"/>
</LinearLayout>